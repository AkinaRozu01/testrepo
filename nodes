public class Node{

     int value;
     Node left;
     Node right;
     public static void main(String []args){
     
     }
     
     public Node(){
         
     }
     public Node getLeft(int a){
         return left;
     }
     
     public Node getRight(int b){
         return right;
     }
     
     public void setRight(Node x){
         left = x;
     }
     
     public void setLeft(Node y){
         right = y;
     }
     
     public int getValue(){
         return value;
     }
}
